//- the below line is equivalent to <header class="header">
header.header
    //- the below line is equivalent to <nav class="nav nav--tours">
    nav.nav.nav--tours
        a.nav__el(href='/') All tours
    //- the below line is equivalent to <div class="header__logo">
    .header__logo 
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout(href='/logout') Log out
            a.nav__el(href='/me') 
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Log in
            a.button.nav__el.nav__el--cta(href='/signup') Sign up